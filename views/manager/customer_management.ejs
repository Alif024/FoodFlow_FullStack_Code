<div class="tab-panel" id="customers">
  <div class="panel-header customer-header">
    <div>
      <span class="panel-badge">Customer Data</span>
      <h1 class="panel-title">Customers</h1>
      <p class="panel-description">Manage customer profiles from membership records.</p>
    </div>
    <button type="button" id="customerAddBtn" class="customer-add-btn">+ Add New</button>
  </div>

  <div class="panel-content customer-shell">
    <div class="customer-summary">
      <article class="stat-item">
        <div class="stat-value" id="customerTotalCount">0</div>
        <div class="stat-label">Total Customers</div>
      </article>
      <article class="stat-item">
        <div class="stat-value" id="customerActiveCount">0</div>
        <div class="stat-label">Active</div>
      </article>
      <article class="stat-item">
        <div class="stat-value" id="customerInactiveCount">0</div>
        <div class="stat-label">Inactive</div>
      </article>
    </div>

    <section class="content-card customer-form-card hidden" id="customerFormCard">
      <div class="card-header">
        <div class="card-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4z"></path>
            <path d="M4 20v-1c0-2.66 5.33-4 8-4s8 1.34 8 4v1"></path>
          </svg>
        </div>
        <h3 class="card-title" id="customerFormTitle">Add Customer</h3>
      </div>

      <form id="customerForm" class="customer-form-grid">
        <input type="hidden" id="customerMembershipId" />
        <label class="customer-form-field">
          <span>First Name</span>
          <input type="text" id="customerFirstName" required />
        </label>
        <label class="customer-form-field">
          <span>Last Name</span>
          <input type="text" id="customerLastName" />
        </label>
        <label class="customer-form-field">
          <span>Phone</span>
          <input type="text" id="customerPhone" />
        </label>
        <label class="customer-form-field">
          <span>Email</span>
          <input type="email" id="customerEmail" required />
        </label>
        <label class="customer-form-field">
          <span>Password <small>(required for new customer)</small></span>
          <input type="password" id="customerPassword" autocomplete="new-password" />
        </label>
        <label class="customer-form-field">
          <span>Tier</span>
          <select id="customerTier">
            <option value="basic">basic</option>
            <option value="silver">silver</option>
            <option value="gold">gold</option>
            <option value="platinum">platinum</option>
          </select>
        </label>
        <label class="customer-form-field">
          <span>Points</span>
          <input type="number" id="customerPoints" min="0" step="1" value="0" />
        </label>
        <label class="customer-form-field">
          <span>Status</span>
          <select id="customerActive">
            <option value="1">Active</option>
            <option value="0">Inactive</option>
          </select>
        </label>

        <div class="customer-form-actions">
          <button type="button" id="customerCancelBtn" class="customer-btn customer-btn--ghost">Cancel</button>
          <button type="submit" id="customerSaveBtn" class="customer-btn customer-btn--primary">Save</button>
        </div>
      </form>
    </section>

    <section class="content-card customer-table-card">
      <div class="customer-toolbar">
        <label class="customer-search" for="customerSearchInput">
          <span class="input-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="11" cy="11" r="8"></circle>
              <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
          </span>
          <input type="search" id="customerSearchInput" placeholder="Search by name, phone, or email" />
        </label>
        <button type="button" id="customerRefreshBtn" class="customer-btn customer-btn--ghost">Refresh</button>
      </div>

      <p class="customer-table-status" id="customerTableStatus">Loading customers...</p>

      <div class="customer-table-wrap">
        <table class="customer-table">
          <thead>
            <tr>
              <th>customer_id</th>
              <th>customer_name</th>
              <th>phone</th>
              <th>email</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody id="customerTableBody"></tbody>
        </table>
      </div>
    </section>
  </div>
</div>
